<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <!-- 🔑 關閉預設通配編譯，避免重複定義 -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="6.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="NUnit" Version="3.14.0" />
    <PackageReference Include="NUnit.Analyzers" Version="3.9.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="NUnit.Framework" />
  </ItemGroup>
  
  <!-- 🎯 只白名單引入純核心檔，確保無 Godot 依賴 -->
  <ItemGroup>
    <!-- 核心資料結構 -->
    <Compile Include="..\Script\Actor\Actor.cs" />
    <Compile Include="..\Script\Actor\Component.cs" />
    <Compile Include="..\Script\Actor\SelfOp.cs" />
    <Compile Include="..\Script\Result.cs" />
    
    <!-- 命令系統 -->
    <Compile Include="..\Script\Command\AtomicCmd.cs" />
    <Compile Include="..\Script\Command\CmdExecutor.cs" />

    <!-- 中介層 -->
    <Compile Include="..\Script\InterOp\Utils.cs" />
    <Compile Include="..\Script\InterOp\InterOps.cs" />
    <Compile Include="..\Script\InterOp\Translator.cs" />
  

    <!-- 記憶軸 -->
    <Compile Include="..\Script\Memory\MemoryQueue.cs" />
    

    <!-- Phase 核心（僅限無 Godot 相依者） -->
    <Compile Include="..\Script\Kernel\PhaseContext.cs" />



  </ItemGroup>

  <!-- 🧪 測試檔自身，排除自動生成檔案 -->
  <ItemGroup>
    <Compile Include="*.cs" Exclude="obj\**\*.cs;bin\**\*.cs" />
  </ItemGroup>

</Project>